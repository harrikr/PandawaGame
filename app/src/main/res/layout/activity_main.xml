    <Button
        android:id="@+id/btnPengenalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnplay"
        android:layout_alignRight="@+id/btnplay"
        android:layout_below="@+id/btnplay"
        android:layout_marginTop="14dp"
        android:background="#ef7918"
        android:text="PENGENALAN"
        android:textColor="#fcfbfa"
        android:textStyle="bold|italic"
        android:typeface="monospace" />
    <Button
        android:id="@+id/btnPengaturan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPengenalan"
        android:layout_alignRight="@+id/btnPengenalan"
        android:layout_below="@+id/btnPengenalan"
        android:layout_marginTop="19dp"
        android:background="#ef7918"
        android:text="PENGATURAN"
        android:textColor="#fcfbfa"
        android:textStyle="bold|italic"
        android:typeface="monospace" />
    <TextView
        android:id="@+id/pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:textColor="#fcfbfa"
        android:layout_marginBottom="15dp"
        android:text="Pandawa Game Team"
        android:textStyle="italic|bold" />

    <ImageView
        android:id="@+id/fb"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_alignLeft="@id/pesan"
        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"
        android:src="@drawable/fb" />
    <ImageView
        android:id="@+id/btnExit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignRight="@id/pesan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/fb" />



</RelativeLayout>
